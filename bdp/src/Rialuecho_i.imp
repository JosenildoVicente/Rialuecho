OPERATIONS
    adicionar_carrinho ( xx ) =
    BEGIN
        VAR ee IN
                    ee := carrinhos_i ( xx ) ;

                    IF ee = FALSE
                    THEN carrinhos_i ( xx ) := TRUE
                    END
            END
    END
    ;


    //Operacao para apagar um carrinho
    dropar_carrinho ( xx ) =
    BEGIN
        VAR ee IN
                    ee := carrinhos_i ( xx ) ;

                    IF ee = TRUE
                    THEN carrinhos_i ( xx ) := FALSE
                    END
            END
