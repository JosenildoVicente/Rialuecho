    & produtos_valor_i : ids_produto --> NAT
//    & produtos_por_carrinho_i : num_carrinho --> struct(prod: ids_produto, qtd: NAT)

INITIALISATION
    carrinhos_i := num_carrinho * { FALSE } ;
    produtos_qtd_i := ids_produto * { 0 } ;
    produtos_valor_i := ids_produto * { 0 }
